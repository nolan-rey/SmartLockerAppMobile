<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartLockerApp.Views.LockConfirmationPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Verrouillage confirmé"
             BackgroundColor="#F8FAFC">

    <Grid>
        <!-- Header -->
        <Border VerticalOptions="Start" 
                BackgroundColor="White" 
                HeightRequest="80"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
            </Border.Shadow>
            
            <Label Text="Verrouillage confirmé" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   TextColor="#1E293B"/>
        </Border>
        
        <!-- Content -->
        <StackLayout Margin="20,100,20,20" HorizontalOptions="Center" MaximumWidthRequest="400">
            
            <!-- Success Message -->
            <Border BackgroundColor="White" 
                    StrokeThickness="0"
                    Padding="40" 
                    Margin="0,0,0,30">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="20" Offset="0,4"/>
                </Border.Shadow>
                
                <StackLayout HorizontalOptions="Center">
                    <!-- Success Icon -->
                    <Border BackgroundColor="#10B981" 
                            WidthRequest="80" 
                            HeightRequest="80" 
                            StrokeThickness="0"
                            Margin="0,0,0,20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="40"/>
                        </Border.StrokeShape>
                        <Label Text="✓" 
                               FontSize="32" 
                               TextColor="White"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <Label Text="Casier verrouillé avec succès !" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           HorizontalTextAlignment="Center" 
                           TextColor="#1E293B" 
                           Margin="0,0,0,10"/>
                    
                    <Label Text="Vos affaires sont en sécurité. Vous pouvez maintenant quitter le casier." 
                           FontSize="16" 
                           HorizontalTextAlignment="Center" 
                           TextColor="#64748B" 
                           LineHeight="1.5"/>
                </StackLayout>
            </Border>
            
            <!-- Session Info -->
            <Border BackgroundColor="White" 
                    StrokeThickness="0"
                    Padding="20" 
                    Margin="0,0,0,20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                </Border.Shadow>
                
                <StackLayout>
                    <Label Text="Informations de session" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#1E293B" 
                           Margin="0,0,0,12"/>
                    
                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*">
                        
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Casier :" 
                               FontSize="14" 
                               TextColor="#64748B"/>
                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="A-12" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="#1E293B"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="Durée :" 
                               FontSize="14" 
                               TextColor="#64748B" 
                               Margin="0,8,0,0"/>
                        <Label Grid.Row="1" Grid.Column="1" 
                               Text="2 heures" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="#1E293B" 
                               Margin="0,8,0,0"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" 
                               Text="Expire à :" 
                               FontSize="14" 
                               TextColor="#64748B" 
                               Margin="0,8,0,0"/>
                        <Label Grid.Row="2" Grid.Column="1" 
                               Text="16:30" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="#1E293B" 
                               Margin="0,8,0,0"/>
                    </Grid>
                </StackLayout>
            </Border>
            
            <!-- Return Home Button -->
            <Button x:Name="HomeButton" 
                    Text="Retour à l'accueil"
                    BackgroundColor="#3B82F6" 
                    TextColor="White" 
                    FontSize="18" 
                    FontAttributes="Bold"
                    HeightRequest="56" 
                    CornerRadius="12" 
                    BorderWidth="0" 
                    Clicked="HomeButton_Clicked">
                <Button.Shadow>
                    <Shadow Brush="#3B82F6" Opacity="0.3" Radius="10" Offset="0,4"/>
                </Button.Shadow>
            </Button>
        </StackLayout>
    </Grid>
</ContentPage>
