<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartLockerApp.Views.LockInstructionsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Verrouillage"
             BackgroundColor="#F8FAFC">

    <Grid>
        <!-- Header -->
        <Border VerticalOptions="Start" 
                BackgroundColor="White" 
                HeightRequest="80"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
            </Border.Shadow>
            
            <Grid MaximumWidthRequest="400" HorizontalOptions="Center" Margin="20,0">
                <Button x:Name="BackButton" 
                        HorizontalOptions="Start" 
                        BackgroundColor="Transparent"
                        BorderWidth="0"
                        Text="←"
                        FontSize="20"
                        TextColor="#64748B"
                        Clicked="BackButton_Clicked"/>
                
                <Label Text="Verrouillage" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       TextColor="#1E293B"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <StackLayout Margin="20,100,20,20" HorizontalOptions="Center" MaximumWidthRequest="400">
            
            <!-- Method Selection -->
            <Border BackgroundColor="White" 
                    StrokeThickness="0"
                    Padding="24" 
                    Margin="0,0,0,20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="20" Offset="0,4"/>
                </Border.Shadow>
                
                <StackLayout>
                    <Label Text="Choisissez votre méthode de verrouillage" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#1E293B" 
                           Margin="0,0,0,20" 
                           HorizontalTextAlignment="Center"/>
                    
                    <!-- RFID Option -->
                    <Border BackgroundColor="#F1F5F9" 
                            HeightRequest="60" 
                            StrokeThickness="0"
                            Margin="0,0,0,12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="RfidButton_Clicked"/>
                        </Border.GestureRecognizers>
                        <StackLayout Orientation="Horizontal" Margin="16">
                            <Border BackgroundColor="#3B82F6" 
                                    WidthRequest="40" 
                                    HeightRequest="40" 
                                    StrokeThickness="0"
                                    Margin="0,0,16,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Label Text="💳" 
                                       FontSize="20" 
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <StackLayout>
                                <Label Text="Badge RFID" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="#1E293B"/>
                                <Label Text="Utilisez votre badge" 
                                       FontSize="14" 
                                       TextColor="#64748B"/>
                            </StackLayout>
                        </StackLayout>
                    </Border>
                    
                    <!-- Fingerprint Option -->
                    <Border BackgroundColor="#F1F5F9" 
                            HeightRequest="60" 
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="FingerprintButton_Clicked"/>
                        </Border.GestureRecognizers>
                        <StackLayout Orientation="Horizontal" Margin="16">
                            <Border BackgroundColor="#10B981" 
                                    WidthRequest="40" 
                                    HeightRequest="40" 
                                    StrokeThickness="0"
                                    Margin="0,0,16,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Label Text="👆" 
                                       FontSize="20" 
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <StackLayout>
                                <Label Text="Empreinte digitale" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="#1E293B"/>
                                <Label Text="Scannez votre doigt" 
                                       FontSize="14" 
                                       TextColor="#64748B"/>
                            </StackLayout>
                        </StackLayout>
                    </Border>
                </StackLayout>
            </Border>
        </StackLayout>
    </Grid>
</ContentPage>
