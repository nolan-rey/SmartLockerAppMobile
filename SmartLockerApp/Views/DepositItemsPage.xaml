<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartLockerApp.Views.DepositItemsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Dépôt d'objets"
             BackgroundColor="#F8FAFC">

    <Grid>
        <!-- Header -->
        <Border VerticalOptions="Start" 
                BackgroundColor="White" 
                HeightRequest="80"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
            </Border.Shadow>
            
            <Grid MaximumWidthRequest="400" HorizontalOptions="Center" Margin="20,0">
                <Button x:Name="BackButton" 
                        HorizontalOptions="Start" 
                        BackgroundColor="Transparent"
                        BorderWidth="0"
                        Text="←"
                        FontSize="20"
                        TextColor="#64748B"
                        Clicked="BackButton_Clicked"/>
                
                <Label Text="Dépôt d'objets" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       TextColor="#1E293B"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollView Margin="20,100,20,20">
            <StackLayout MaximumWidthRequest="400" HorizontalOptions="Center">
                
                <!-- Instructions -->
                <Border BackgroundColor="White" 
                        StrokeThickness="0"
                        Padding="24" 
                        Margin="0,0,0,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="20" Offset="0,4"/>
                    </Border.Shadow>
                    
                    <StackLayout>
                        <Label Text="Instructions" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#1E293B" 
                               Margin="0,0,0,12"/>
                        
                        <Label Text="1. Placez vos objets dans le casier" 
                               FontSize="14" 
                               TextColor="#64748B" 
                               Margin="0,0,0,8"/>
                        
                        <Label Text="2. Vérifiez que tous vos objets sont bien rangés" 
                               FontSize="14" 
                               TextColor="#64748B" 
                               Margin="0,0,0,8"/>
                        
                        <Label Text="3. Fermez la porte du casier" 
                               FontSize="14" 
                               TextColor="#64748B" 
                               Margin="0,0,0,8"/>
                        
                        <Label Text="4. Confirmez le dépôt ci-dessous" 
                               FontSize="14" 
                               TextColor="#64748B"/>
                    </StackLayout>
                </Border>
                
                <!-- Locker Status -->
                <Border BackgroundColor="White" 
                        StrokeThickness="0"
                        Padding="24" 
                        Margin="0,0,0,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                    </Border.Shadow>
                    
                    <StackLayout>
                        <Label Text="Statut du casier" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#1E293B" 
                               Margin="0,0,0,16"/>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            
                            <Label Grid.Row="0" Grid.Column="0" Text="Casier :" FontSize="14" TextColor="#64748B"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="A-12" FontSize="14" FontAttributes="Bold" TextColor="#1E293B"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Text="Porte :" FontSize="14" TextColor="#64748B" Margin="0,12,0,0"/>
                            <StackLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,12,0,0">
                                <Border BackgroundColor="#F59E0B" 
                                        WidthRequest="8" 
                                        HeightRequest="8" 
                                        StrokeThickness="0"
                                        Margin="0,0,6,0"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4"/>
                                    </Border.StrokeShape>
                                </Border>
                                <Label Text="Ouverte" FontSize="14" FontAttributes="Bold" TextColor="#F59E0B"/>
                            </StackLayout>
                            
                            <Label Grid.Row="2" Grid.Column="0" Text="Temps restant :" FontSize="14" TextColor="#64748B" Margin="0,12,0,0"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="4:30" FontSize="14" FontAttributes="Bold" TextColor="#EF4444" Margin="0,12,0,0"/>
                        </Grid>
                    </StackLayout>
                </Border>
                
                <!-- Item Checklist -->
                <Border BackgroundColor="White" 
                        StrokeThickness="0"
                        Padding="24" 
                        Margin="0,0,0,32">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                    </Border.Shadow>
                    
                    <StackLayout>
                        <Label Text="Vérification" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#1E293B" 
                               Margin="0,0,0,16"/>
                        
                        <StackLayout x:Name="ChecklistContainer">
                            <!-- Checklist items will be added programmatically -->
                            <StackLayout Orientation="Horizontal" Margin="0,0,0,12">
                                <CheckBox x:Name="ItemsPlacedCheck" Color="#2563EB"/>
                                <Label Text="Tous mes objets sont dans le casier" FontSize="14" TextColor="#64748B" VerticalOptions="Center"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Margin="0,0,0,12">
                                <CheckBox x:Name="DoorClosedCheck" Color="#2563EB"/>
                                <Label Text="La porte du casier est fermée" FontSize="14" TextColor="#64748B" VerticalOptions="Center"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal">
                                <CheckBox x:Name="ConfirmDepositCheck" Color="#2563EB"/>
                                <Label Text="Je confirme le dépôt de mes objets" FontSize="14" TextColor="#64748B" VerticalOptions="Center"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Border>
                
                <!-- Actions -->
                <StackLayout>
                    <!-- Confirm Deposit Button -->
                    <Button x:Name="ConfirmDepositButton" 
                            Text="Confirmer le dépôt"
                            BackgroundColor="#10B981" 
                            TextColor="White" 
                            FontSize="18" 
                            FontAttributes="Bold"
                            HeightRequest="56" 
                            CornerRadius="12" 
                            BorderWidth="0" 
                            Margin="0,0,0,12"
                            IsEnabled="False"
                            Clicked="ConfirmDepositButton_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="#10B981" Opacity="0.3" Radius="10" Offset="0,4"/>
                        </Button.Shadow>
                    </Button>
                    
                    <!-- Cancel Button -->
                    <Button x:Name="CancelButton" 
                            Text="Annuler"
                            BackgroundColor="Transparent" 
                            TextColor="#EF4444" 
                            FontSize="16" 
                            HeightRequest="48" 
                            BorderWidth="1" 
                            BorderColor="#FEE2E2"
                            CornerRadius="8" 
                            Clicked="CancelButton_Clicked"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
