<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartLockerApp.Views.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartLockerApp.ViewModels"
             Title="{Binding Title}"
             BackgroundColor="#F8FAFC">
    
    <ContentPage.BindingContext>
        <vm:HomeViewModel x:Name="ViewModel"/>
    </ContentPage.BindingContext>

    <Grid>
        
        <!-- Header -->
        <Border VerticalOptions="Start" 
                BackgroundColor="White" 
                HeightRequest="80"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
            </Border.Shadow>
            
            <Grid MaximumWidthRequest="400" HorizontalOptions="Center" Margin="20,0">
                <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="12">
                    <Image Source="dotnet_bot.png" WidthRequest="40" HeightRequest="40"/>
                    <StackLayout VerticalOptions="Center">
                        <Label Text="SmartLocker" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Text="{Binding WelcomeMessage}" FontSize="14" TextColor="Gray"/>
                    </StackLayout>
                </StackLayout>
                
                <Button HorizontalOptions="End" 
                        VerticalOptions="Center"
                        BackgroundColor="Transparent"
                        BorderWidth="0"
                        Text="⚙"
                        FontSize="20"
                        Command="{Binding SettingsCommand}"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollView x:Name="MainScrollView" Margin="0,80,0,0">
            <Grid MaximumWidthRequest="400" HorizontalOptions="Center" Margin="20">
                
                <StackLayout x:Name="WelcomeSection" Spacing="20">
                    
                    <!-- Active Session Card (Visible when session is active) -->
                    <Border BackgroundColor="#3B82F6"
                            StrokeThickness="0"
                            Padding="20"
                            IsVisible="{Binding HasActiveSession}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#3B82F6" Opacity="0.3" Radius="15" Offset="0,0"/>
                        </Border.Shadow>
                        
                        <StackLayout Spacing="12">
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="🔒" FontSize="16"/>
                                <Label Text="Session en cours" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                            </StackLayout>
                            
                            <StackLayout Spacing="4">
                                <Label Text="{Binding ActiveSession.LockerId, StringFormat='Casier {0}'}" FontSize="20" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="{Binding ActiveSession.Location}" FontSize="14" TextColor="#BFDBFE"/>
                                <Label Text="{Binding ActiveSession.RemainingTime, StringFormat='Temps restant: {0}'}" FontSize="14" TextColor="#BFDBFE"/>
                            </StackLayout>
                            
                            <Button Text="Voir les détails"
                                    BackgroundColor="White"
                                    TextColor="#3B82F6"
                                    HeightRequest="36"
                                    Command="{Binding ActiveSessionCommand}"
                                    CornerRadius="8"
                                    FontAttributes="Bold"/>
                        </StackLayout>
                    </Border>
                    
                    <!-- Search Bar -->
                    <Border BackgroundColor="White" 
                            StrokeThickness="0"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                        </Border.Shadow>
                        
                        <Grid>
                            <Entry x:Name="SearchEntry" 
                                   Placeholder="Rechercher un casier..."
                                   BackgroundColor="Transparent"
                                   FontSize="16"
                                   Margin="40,0,0,0"/>
                            <Label Text="🔍" FontSize="16" VerticalOptions="Center" Margin="12,0,0,0" TextColor="Gray"/>
                        </Grid>
                    </Border>
                    
                    <!-- Quick Stats -->
                    <StackLayout x:Name="QuickStatsSection">
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto">
                        
                        <Border Grid.Column="0" 
                                BackgroundColor="White" 
                                StrokeThickness="0"
                                Padding="16" 
                                Margin="0,0,8,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                            </Border.Shadow>
                            <StackLayout HorizontalOptions="Center" Spacing="4">
                                <Label Text="{Binding AvailableLockers.Count}" FontSize="24" FontAttributes="Bold" TextColor="#10B981" HorizontalOptions="Center"/>
                                <Label Text="Disponibles" FontSize="12" TextColor="Gray" HorizontalOptions="Center"/>
                            </StackLayout>
                        </Border>
                        
                        <Border Grid.Column="1" 
                                BackgroundColor="White" 
                                StrokeThickness="0"
                                Padding="16" 
                                Margin="4,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                            </Border.Shadow>
                            <StackLayout HorizontalOptions="Center" Spacing="4">
                                <Label Text="{Binding TotalSessions}" FontSize="24" FontAttributes="Bold" TextColor="#F59E0B" HorizontalOptions="Center"/>
                                <Label Text="Sessions" FontSize="12" TextColor="Gray" HorizontalOptions="Center"/>
                            </StackLayout>
                        </Border>
                        
                        <Border Grid.Column="2" 
                                BackgroundColor="White" 
                                StrokeThickness="0"
                                Padding="16" 
                                Margin="8,0,0,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                            </Border.Shadow>
                            <StackLayout HorizontalOptions="Center" Spacing="4">
                                <Label Text="{Binding TotalSpent, StringFormat='{0:C}'}" FontSize="24" FontAttributes="Bold" TextColor="#2563EB" HorizontalOptions="Center"/>
                                <Label Text="Dépensé" FontSize="12" TextColor="Gray" HorizontalOptions="Center"/>
                            </StackLayout>
                        </Border>
                    </Grid>
                    </StackLayout>
                    
                    <!-- Lockers List -->
                    <StackLayout x:Name="LockersSection" Spacing="12">
                        <Label Text="Casiers disponibles" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                        
                        <!-- Quick Actions -->
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" Margin="0,0,0,12">
                            <Button Grid.Column="0" 
                                    Text="📊 Historique"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,0,6,0"
                                    Command="{Binding HistoryCommand}"/>
                            <Button Grid.Column="1" 
                                    Text="⚙️ Paramètres"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="6,0,0,0"
                                    Command="{Binding SettingsCommand}"/>
                        </Grid>
                        
                        <!-- Dynamic Locker Items -->
                        <CollectionView ItemsSource="{Binding AvailableLockers}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="White" 
                                            StrokeThickness="0"
                                            Padding="16"
                                            Margin="0,4">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="12"/>
                                        </Border.StrokeShape>
                                        <Border.Shadow>
                                            <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                                        </Border.Shadow>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={x:Reference ViewModel}, Path=LockerSelectedCommand}" 
                                                                  CommandParameter="{Binding}"/>
                                        </Border.GestureRecognizers>
                                
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    
                                        <!-- Status Icon -->
                                        <Border Grid.Column="0" 
                                                BackgroundColor="{Binding StatusColor, StringFormat='{0}20'}" 
                                                StrokeThickness="0"
                                                WidthRequest="40" 
                                                HeightRequest="40" 
                                                VerticalOptions="Center">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding IsAvailable, Converter={StaticResource BoolToLockerIconConverter}}" 
                                                   FontSize="16" 
                                                   HorizontalOptions="Center" 
                                                   VerticalOptions="Center"/>
                                        </Border>
                                        
                                        <!-- Locker Info -->
                                        <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center" Spacing="4">
                                            <Label Text="{Binding DisplayId, StringFormat='Casier {0}'}" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                                            <StackLayout Orientation="Horizontal" Spacing="4">
                                                <Label Text="📍" FontSize="12"/>
                                                <Label Text="{Binding Location}" FontSize="12" TextColor="Gray"/>
                                            </StackLayout>
                                        </StackLayout>
                                        
                                        <!-- Status Badge -->
                                        <Border Grid.Column="2" 
                                                BackgroundColor="{Binding StatusColor, StringFormat='{0}20'}" 
                                                StrokeThickness="0"
                                                Padding="8,4"
                                                VerticalOptions="Center">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding StatusText}" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold" 
                                                   TextColor="{Binding StatusColor}"/>
                                        </Border>
                                    </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                            
                        </StackLayout>
                    </StackLayout>
                    
                </StackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
