<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartLockerApp.Views.ActiveSessionPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Session active"
             BackgroundColor="#F8FAFC">

    <Grid>
        <!-- Header with Navigation -->
        <Border Style="{StaticResource NavigationHeader}">
            <Grid Style="{StaticResource MobileContentContainer}" Padding="0,20">
                <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="16">
                    <Button x:Name="BackButton" 
                            Style="{StaticResource BackButton}"
                            Clicked="BackButton_Clicked"/>
                    <Label Text="Session active" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           VerticalOptions="Center" 
                           TextColor="Black"/>
                </StackLayout>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollView Margin="0,100,0,0">
            <StackLayout Style="{StaticResource MobileScrollContent}">
                
                <!-- Session Status -->
                <Border BackgroundColor="White" 
                        StrokeThickness="0"
                        Padding="24" 
                        Margin="0,0,0,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="20" Offset="0,4"/>
                    </Border.Shadow>
                    
                    <StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,0,0,16">
                            <Border BackgroundColor="#10B981" 
                                    WidthRequest="12" 
                                    HeightRequest="12" 
                                    StrokeThickness="0"
                                    Margin="0,0,8,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                            </Border>
                            <Label Text="Session en cours" FontSize="16" FontAttributes="Bold" TextColor="#10B981"/>
                        </StackLayout>
                        
                        <Label x:Name="LockerIdLabel"
                               Text="Casier A-12" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               HorizontalTextAlignment="Center" 
                               TextColor="#1E293B" 
                               Margin="0,0,0,8"/>
                        
                        <Label Text="Vos affaires sont en sécurité" 
                               FontSize="16" 
                               HorizontalTextAlignment="Center" 
                               TextColor="#64748B"/>
                    </StackLayout>
                </Border>
                
                <!-- Session Details -->
                <Border BackgroundColor="White" 
                        StrokeThickness="0"
                        Padding="24" 
                        Margin="0,0,0,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.05" Radius="10" Offset="0,2"/>
                    </Border.Shadow>
                    
                    <StackLayout>
                        <Label Text="Détails de la session" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#1E293B" 
                               Margin="0,0,0,16"/>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
                            
                            <Label Grid.Row="0" Grid.Column="0" Text="Début :" FontSize="14" TextColor="#64748B"/>
                            <Label Grid.Row="0" Grid.Column="1" x:Name="StartTimeLabel" Text="14:30" FontSize="14" FontAttributes="Bold" TextColor="#1E293B"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Text="Durée :" FontSize="14" TextColor="#64748B" Margin="0,12,0,0"/>
                            <Label Grid.Row="1" Grid.Column="1" x:Name="DurationLabel" Text="2 heures" FontSize="14" FontAttributes="Bold" TextColor="#1E293B" Margin="0,12,0,0"/>
                            
                            <Label Grid.Row="2" Grid.Column="0" Text="Expire à :" FontSize="14" TextColor="#64748B" Margin="0,12,0,0"/>
                            <Label Grid.Row="2" Grid.Column="1" x:Name="EndTimeLabel" Text="16:30" FontSize="14" FontAttributes="Bold" TextColor="#1E293B" Margin="0,12,0,0"/>
                            
                            <Label Grid.Row="3" Grid.Column="0" Text="Temps restant :" FontSize="14" TextColor="#64748B" Margin="0,12,0,0"/>
                            <Label Grid.Row="3" Grid.Column="1" x:Name="RemainingTimeLabel" Text="1h 45min" FontSize="14" FontAttributes="Bold" TextColor="#F59E0B" Margin="0,12,0,0"/>
                        </Grid>
                    </StackLayout>
                </Border>
                
                <!-- Actions -->
                <StackLayout HorizontalOptions="Fill">
                    <!-- End Session Button -->
                    <Button x:Name="EndSessionButton" 
                            Text="Terminer la session"
                            BackgroundColor="#EF4444" 
                            TextColor="White" 
                            FontSize="18" 
                            FontAttributes="Bold"
                            HeightRequest="56" 
                            CornerRadius="16" 
                            BorderWidth="0" 
                            HorizontalOptions="Fill"
                            Clicked="EndSessionButton_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="#EF4444" Opacity="0.3" Radius="12" Offset="0,4"/>
                        </Button.Shadow>
                    </Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
