<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartLockerApp.Views.SplashScreenPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="SmartLocker"
             BackgroundColor="#2563EB"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Background Gradient -->
        <Border BackgroundColor="#2563EB">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2563EB" Offset="0.0" />
                    <GradientStop Color="#1E40AF" Offset="0.5" />
                    <GradientStop Color="#1D4ED8" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <!-- Main Content -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="60">
            
            <!-- Logo Container with Animation -->
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="0">
                <!-- Logo Image - Plus gros et sans bordure -->
                <Image x:Name="LogoImage"
                       Source="smartlocker_logo.svg"
                       WidthRequest="280"
                       HeightRequest="280"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Aspect="AspectFit"/>
            </StackLayout>
            
            <!-- App Name -->
            <StackLayout HorizontalOptions="Center" Spacing="12">
                <Label x:Name="AppNameLabel"
                       Text="SmartLocker"
                       FontSize="36"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White"
                       Opacity="0"/>
                
                <Label x:Name="TaglineLabel"
                       Text="SÃ©curisez vos affaires intelligemment"
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="White"
                       Opacity="0"/>
            </StackLayout>
            
            <!-- Loading Indicator -->
            <StackLayout HorizontalOptions="Center" Spacing="16" Margin="0,20,0,0">
                
                <!-- Custom Loading Animation -->
                <Grid x:Name="LoadingContainer" HorizontalOptions="Center">
                    <Border x:Name="LoadingDot1"
                            BackgroundColor="White"
                            WidthRequest="12"
                            HeightRequest="12"
                            StrokeThickness="0"
                            TranslationX="-20"
                            Opacity="0.3">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                    </Border>
                    
                    <Border x:Name="LoadingDot2"
                            BackgroundColor="White"
                            WidthRequest="12"
                            HeightRequest="12"
                            StrokeThickness="0"
                            TranslationX="0"
                            Opacity="0.6">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                    </Border>
                    
                    <Border x:Name="LoadingDot3"
                            BackgroundColor="White"
                            WidthRequest="12"
                            HeightRequest="12"
                            StrokeThickness="0"
                            TranslationX="20"
                            Opacity="0.9">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                    </Border>
                </Grid>
                
                <Label x:Name="LoadingLabel"
                       Text="Chargement..."
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="White"
                       Opacity="0.8"/>
            </StackLayout>
        </StackLayout>
        
        <!-- Version Info -->
        <StackLayout VerticalOptions="End" HorizontalOptions="Center" Margin="0,0,0,40">
            <Label Text="Version 1.0.0"
                   FontSize="12"
                   HorizontalOptions="Center"
                   TextColor="White"
                   Opacity="0.6"/>
        </StackLayout>
    </Grid>
</ContentPage>
