<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartLockerApp.Views.ApiTestPage"
             Title="Test API SmartLocker"
             BackgroundColor="#F3F4F6">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- En-tête -->
            <Label Text="🧪 Test API SmartLocker"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1F2937"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <!-- Test 1: Connexion Admin -->
            <Frame BackgroundColor="White" 
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="1️⃣ Test Authentification Admin"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2563EB"/>
                    
                    <Button x:Name="TestLoginButton"
                            Text="Tester Login (SaintMichel/ITcampus)"
                            BackgroundColor="#2563EB"
                            TextColor="White"
                            CornerRadius="8"
                            Clicked="TestLogin_Clicked"/>
                    
                    <Label x:Name="LoginResultLabel"
                           Text="En attente..."
                           FontSize="14"
                           TextColor="#6B7280"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Test 2: Création utilisateur -->
            <Frame BackgroundColor="White" 
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="2️⃣ Test Création Utilisateur"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#10B981"/>
                    
                    <Entry x:Name="TestEmailEntry"
                           Placeholder="Email de test"
                           Text="test@smartlocker.com"/>
                    
                    <Entry x:Name="TestPasswordEntry"
                           Placeholder="Mot de passe"
                           Text="Test123!"
                           IsPassword="True"/>
                    
                    <Entry x:Name="TestNameEntry"
                           Placeholder="Nom complet"
                           Text="Utilisateur Test"/>
                    
                    <Button x:Name="TestCreateUserButton"
                            Text="Créer Utilisateur"
                            BackgroundColor="#10B981"
                            TextColor="White"
                            CornerRadius="8"
                            Clicked="TestCreateUser_Clicked"/>
                    
                    <Label x:Name="CreateUserResultLabel"
                           Text="En attente..."
                           FontSize="14"
                           TextColor="#6B7280"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Test 3: Récupération casiers -->
            <Frame BackgroundColor="White" 
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="3️⃣ Test Récupération Casiers"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#F59E0B"/>
                    
                    <Button x:Name="TestLockersButton"
                            Text="Récupérer Casiers Disponibles"
                            BackgroundColor="#F59E0B"
                            TextColor="White"
                            CornerRadius="8"
                            Clicked="TestLockers_Clicked"/>
                    
                    <Label x:Name="LockersResultLabel"
                           Text="En attente..."
                           FontSize="14"
                           TextColor="#6B7280"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Console de logs -->
            <Frame BackgroundColor="#1F2937" 
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📋 Console de Logs"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <ScrollView HeightRequest="200">
                        <Label x:Name="LogsLabel"
                               Text="Logs apparaîtront ici..."
                               FontSize="12"
                               FontFamily="Courier"
                               TextColor="#10B981"
                               LineBreakMode="WordWrap"/>
                    </ScrollView>
                    
                    <Button Text="Effacer Logs"
                            BackgroundColor="#EF4444"
                            TextColor="White"
                            CornerRadius="8"
                            Clicked="ClearLogs_Clicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Bouton retour -->
            <Button Text="← Retour"
                    BackgroundColor="#6B7280"
                    TextColor="White"
                    CornerRadius="8"
                    Margin="0,20,0,0"
                    Clicked="BackButton_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
