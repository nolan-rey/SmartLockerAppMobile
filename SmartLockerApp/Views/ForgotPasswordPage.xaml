<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartLockerApp.Views.ForgotPasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Mot de passe oublié"
             BackgroundColor="#F8FAFC">

    <Grid Padding="20" RowDefinitions="*,Auto,*">
        
        <!-- Main Card -->
        <Border Grid.Row="1" 
                BackgroundColor="White" 
                StrokeThickness="0"
                MaximumWidthRequest="400"
                HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="20" Offset="0,0"/>
            </Border.Shadow>
            
            <StackLayout Padding="32" Spacing="24">
                
                <!-- Header -->
                <StackLayout HorizontalOptions="Center" Spacing="16">
                    <Border BackgroundColor="#F0F8FF" 
                            StrokeThickness="0"
                            WidthRequest="60" 
                            HeightRequest="60" 
                            HorizontalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Image Source="dotnet_bot.png" 
                               WidthRequest="40" 
                               HeightRequest="40"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <StackLayout HorizontalOptions="Center" Spacing="8">
                        <Label Text="Mot de passe oublié" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="Black"/>
                        <Label Text="Entrez votre email pour recevoir un lien de réinitialisation" 
                               FontSize="14" 
                               TextColor="Gray" 
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </StackLayout>
                
                <!-- Form -->
                <StackLayout Spacing="20">
                    
                    <!-- Email Field -->
                    <StackLayout Spacing="8">
                        <Label Text="Adresse email" FontSize="14" FontAttributes="Bold"/>
                        <Entry x:Name="EmailEntry" 
                               Placeholder="votre@email.com"
                               FontSize="16"
                               BackgroundColor="White"
                               HeightRequest="48"
                               Keyboard="Email"/>
                    </StackLayout>
                    
                    <!-- Send Button -->
                    <Button x:Name="SendButton" 
                            Text="Envoyer le lien de réinitialisation"
                            FontSize="16"
                            FontAttributes="Bold"
                            BackgroundColor="#2563EB"
                            TextColor="White"
                            HeightRequest="48"
                            CornerRadius="8"
                            Clicked="SendButton_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="#2563EB" Opacity="0.2" Radius="8" Offset="0,2"/>
                        </Button.Shadow>
                    </Button>
                    
                </StackLayout>
                
                <!-- Back to Login -->
                <StackLayout>
                    <BoxView BackgroundColor="#E5E7EB" HeightRequest="1" Margin="0,16,0,16"/>
                    <Button x:Name="BackToLoginButton" 
                            Text="← Retour à la connexion"
                            BackgroundColor="Transparent"
                            BorderWidth="0"
                            HorizontalOptions="Center"
                            TextColor="Gray"
                            FontSize="14"
                            Clicked="BackToLoginButton_Clicked"/>
                </StackLayout>
                
            </StackLayout>
        </Border>
    </Grid>
</ContentPage>
