<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartLockerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SmartLockerApp"
    xmlns:views="clr-namespace:SmartLockerApp.Views"
    Title="SmartLockerApp">

    <!-- Authentication Pages -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
        
    <ShellContent
        Title="Signup"
        ContentTemplate="{DataTemplate views:SignupPage}"
        Route="SignupPage" />
        
    <ShellContent
        Title="ForgotPassword"
        ContentTemplate="{DataTemplate views:ForgotPasswordPage}"
        Route="ForgotPasswordPage" />

    <!-- Main App Pages -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
