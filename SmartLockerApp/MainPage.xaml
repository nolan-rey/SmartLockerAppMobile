<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartLockerApp.MainPage"
             Title="SmartLocker App"
             BackgroundColor="#F8FAFC">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,40"
            Spacing="25">
            
            <!-- Logo and Title -->
            <Border BackgroundColor="#F0F8FF" 
                    StrokeThickness="0"
                    WidthRequest="100" 
                    HeightRequest="100" 
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Image Source="dotnet_bot.png" 
                       WidthRequest="80" 
                       HeightRequest="80"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>

            <Label
                Text="SmartLocker App"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="Black" />

            <Label
                Text="Testez la navigation entre les pages d'authentification"
                FontSize="16"
                TextColor="Gray"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

            <!-- Navigation Buttons -->
            <StackLayout Spacing="15" Margin="0,20,0,0">
                
                <Button
                    x:Name="LoginBtn"
                    Text="Page de Connexion" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnLoginClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#2563EB" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <Button
                    x:Name="SignupBtn"
                    Text="Page d'Inscription" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#10B981"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnSignupClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#10B981" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <Button
                    x:Name="ForgotPasswordBtn"
                    Text="Mot de passe oublié" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#F59E0B"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnForgotPasswordClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#F59E0B" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <Button
                    x:Name="HomePageBtn"
                    Text="Page d'Accueil (après connexion)" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#8B5CF6"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnHomePageClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#8B5CF6" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <Button
                    x:Name="LockerDetailBtn"
                    Text="Détails Casier" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#EF4444"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnLockerDetailClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#EF4444" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <Button
                    x:Name="HelpBtn"
                    Text="Aide et Tutoriel" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#06B6D4"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnHelpClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#06B6D4" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <!-- New Pages Buttons -->
                <Button
                    x:Name="ActiveSessionBtn"
                    Text="Session Active" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#10B981"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnActiveSessionClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#10B981" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <Button
                    x:Name="HistoryBtn"
                    Text="Historique" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#8B5CF6"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnHistoryClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#8B5CF6" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <Button
                    x:Name="SettingsBtn"
                    Text="Paramètres" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#64748B"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnSettingsClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#64748B" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
                <Button
                    x:Name="PaymentBtn"
                    Text="Paiement" 
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#F59E0B"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="8"
                    Clicked="OnPaymentClicked"
                    HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow Brush="#F59E0B" Opacity="0.2" Radius="8" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
                
            </StackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
